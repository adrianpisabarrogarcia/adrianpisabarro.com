---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Explora mi universo del desarrollo: un blog y portafolio donde innovación, tecnología y pasión se fusionan en cada proyecto."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <meta property="og:image" content="/assets/images/logo.webp" />
    <meta name="twitter:image" content="/assets/images/logo.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 max-w-4xl mx-auto p-4"
  >
    <slot />
  </body>
</html>
